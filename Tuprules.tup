.gitignore

CC=clang
CXX=clang++
#CC=clang -DWASTE=1

##############
### CFLAGS ###
##############

DEBUG += -g -fPIC
WARNINGS += -Wall -Wextra -Wno-unused-parameter -Wno-unused-variable
OPTS = -march=native -O0

INCLUDES += -I. -I /usr/include/libusb-1.0/

CFLAGS = $(DEBUG) $(WARNINGS) $(INCLUDES) $(OPTS)

##############
### LINKER ###
##############

LDFLAGS += -lm -lusb-1.0

